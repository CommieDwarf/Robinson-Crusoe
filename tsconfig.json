{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "./server/src/shared/*"
      ]
    },
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "client",
    "server",
    "shared"
  ]
}
