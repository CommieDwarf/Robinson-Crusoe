{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "paths": {
      "@sharedTypes/*": [
        "./src/types/*"
      ],
      "@sharedUtils/*": [
        "./src/utils/*"
      ],
      "@sharedConstants/*": [
        "./src/constants/*"
      ]
    },
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}
